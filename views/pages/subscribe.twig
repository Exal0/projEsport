{% extends "../layouts/base.twig" %}
{% block title %}
	<title>
		{{title}}
	</title>
{% endblock %}

{% block style %}
	<link rel="stylesheet" href="assets/css/output.css">
	<link rel="stylesheet" href="assets/css/subscribe.css">
{% endblock %}

{% block main %}
	<main>
		<section>
			<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
				<h2 class="text-2xl font-bold text-center text-gray-800 mb-4">Inscription</h2>

				<form
					action = "/subscribe" method="post" class="space-y-4">
					<!-- Pseudo -->
					<div>
						<label for="pseudo" class="block text-sm font-medium text-neon-green">Pseudo</label>
						<input type="text" id="pseudo" name="pseudo" required class="mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
						{% if error.pseudo %}
					<p class = "error">{{error}}</p>
					{% endif %}
					</div>

					<!-- Email -->
					<div>
						<label for="email" class="block text-sm font-medium text-gray-700">Email</label>
						<input type="email" id="email" name="email" required class="mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
					{% if error.email %}
					<p class = "error">{{error}}</p>
					{% endif %}
					
					</div>

					<!-- mdp -->
					<div>
						<label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
						<input type="password" id="password" name="password" required class="mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
					</div>


					<!-- confirmer le mot de passe -->
					<div>
						<label for="password" class="block text-sm font-medium text-gray-700"> Confirmer le Mot de passe</label>
						<input type="password" id="confirm_password" name="confirm_password" required class="mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
					</div>

					<!-- Jeu -->
					<div>
						<label for="game" class="block text-sm font-medium text-gray-700">Jeu</label>
						<input type="text" id="game" name="game" class="mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
					</div>

					<!-- Rang -->
					<div>
						<label for="rank" class="block text-sm font-medium text-gray-700">Rang</label>
						<input type="text" id="rank" name="rank" class="mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
					</div>

					<!-- Rôle -->
					<div>
						<label for="role" class="block text-sm font-medium text-gray-700">Rôle</label>
						<input type="text" id="role" name="role" class="mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
					</div>

					<!-- Équipe -->
					<div>
						<label for="equipe" class="block text-sm font-medium text-gray-700">Équipe</label>
						<input type="text" id="equipe" name="equipe" class="mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
					</div>

					<!-- Bouton envoyer -->
					<div>
						<button type="submit" class="w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-600 transition">
							Envoyer
						</button>
					</div>
				</form>
			</div>
		</section>
	</main>
{% endblock %}
