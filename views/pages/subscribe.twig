

{% block title %}
    <title>{{title}}</title>
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="assets/css/output.css">
    <link rel="stylesheet" href="assets/css/subscribe.css">
{% endblock %}

{% block main %}
  <main>
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-black via-gray-900 to-purple-900 text-white px-4">
    <div class="max-w-lg w-full bg-gray-800 bg-opacity-70 rounded-2xl shadow-2xl p-8 border border-purple-600 backdrop-blur">
      <h2 class="text-3xl font-bold text-center mb-6 text-purple-400 tracking-wide">Inscription</h2>

      <form action="/subscribe" method="post" class="space-y-7" id="inscriptionForm">
        <!-- Pseudo -->
        <div>
          <label for="pseudo" class="block mb-2 text-sm text-purple-300 font-medium">Pseudo</label>
          <input
            type="text"
            id="pseudo"
            name="pseudo"
            required
            placeholder="Votre pseudo"
            class="w-full px-4 py-2 bg-black border border-purple-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-white placeholder-gray-500"
          />
          {% if error.pseudo %}
            <p class="text-sm text-red-500 mt-1">{{ error.pseudo }}</p>
          {% endif %}
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block mb-2 text-sm text-purple-300 font-medium">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="Votre email"
            class="w-full px-4 py-2 bg-black border border-purple-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-white placeholder-gray-500"
          />
          {% if error.email %}
            <p class="text-sm text-red-500 mt-1">{{ error.email }}</p>
          {% endif %}
        </div>

        <!-- Mot de passe -->
        <div>
          <label for="password" class="block mb-2 text-sm text-purple-300 font-medium">Mot de passe</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            placeholder="Mot de passe"
            class="w-full px-4 py-2 bg-black border border-purple-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-white placeholder-gray-500"
          />
        </div>

        <!-- Confirmer le mot de passe -->
        <div>
          <label for="confirm_password" class="block mb-2 text-sm text-purple-300 font-medium">Confirmer le mot de passe</label>
          <input
            type="password"
            id="confirm_password"
            name="confirm_password"
            required
            placeholder="Confirmer le mot de passe"
            class="w-full px-4 py-2 bg-black border border-purple-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-white placeholder-gray-500"
          />
        </div>

        <!-- Jeu -->
        <div>
          <label for="game" class="block mb-2 text-sm text-purple-300 font-medium">Jeu</label>
          <input
            type="text"
            id="game"
            name="game"
            placeholder="Jeu auquel vous jouez"
            class="w-full px-4 py-2 bg-black border border-purple-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-white placeholder-gray-500"
          />
        </div>

        <!-- Rang -->
        <div>
          <label for="rank" class="block mb-2 text-sm text-purple-300 font-medium">Rang</label>
          <input
            type="text"
            id="rank"
            name="rank"
            placeholder="Votre rang"
            class="w-full px-4 py-2 bg-black border border-purple-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-white placeholder-gray-500"
          />
        </div>

        <!-- Rôle -->
        <div>
          <label for="role" class="block mb-2 text-sm text-purple-300 font-medium">Rôle</label>
          <input
            type="text"
            id="role"
            name="role"
            placeholder="Votre rôle dans le jeu"
            class="w-full px-4 py-2 bg-black border border-purple-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-white placeholder-gray-500"
          />
        </div>

        <!-- Équipe -->
        <div>
          <label for="equipe" class="block mb-2 text-sm text-purple-300 font-medium">Équipe</label>
          <input
            type="text"
            id="equipe"
            name="equipe"
            placeholder="Nom de l'équipe (si applicable)"
            class="w-full px-4 py-2 bg-black border border-purple-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-white placeholder-gray-500"
          />
        </div>

        <!-- Bouton envoyer -->
        <div>
          <button
            type="submit"
            class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 border-2 border-purple-600 hover:border-purple-700"
          >
            S'inscrire
          </button>
        </div>
      </form>
    </div>
  </section>
</main>


{% endblock %}
